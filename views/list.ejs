<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google Font: Quick Sand -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro&family=Indie+Flower&family=Lobster&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" type="image/png" href="assets/favicon.png" />

    <title>To Do List</title>
    <!-- CSS only -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
  </head>

  <body>
    <div class="container-fluid-1">
      <h1 id="title">Things To Do.</h1>
    </div>
    <div class="container-fluid-2" id="date"><%= kindOfDay %></div>

    <div class="container-fluid-3">
      <div class="box">
        <% for(var i = 0; i < newListItems.length; i++){ %>
        <div class="item">
          <input type="checkbox" />
          <p><%= newListItems[i] %></p>
        </div>

        <% } %>
      </div>
      <form class="items" action="/" method="post">
        <input
          class="todo-input"
          type="text"
          name="newItem"
          placeholder="New item."
          autocomplete="off"
        />
        <button class="todo-btn" type="submit" name="button">Add Task</button>
      </form>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
